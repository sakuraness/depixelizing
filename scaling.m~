        % simple border
        borders = [borders; lefttopCP(2), lefttopCP(3); righttopCP(2), righttopCP(3)];
    else
        % find the center point of 2
        p1 = 
        if (lefttopCP(2) > lefttopCP(4))
            
        end
    end
end
    
    
    
end

